<div id="secretEntries">
  <% if (typeof secret !== 'undefined' && secret.data && secret.data.length > 0) { %>
    <% secret.data.forEach(function(entry, i) { %>
      <div class="flex gap-2 mb-2 entry-row">
        <input type="text" name="keys" value="<%= entry.key %>" placeholder="Key"
               class="flex-1 border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        <input type="text" name="values" value="<%= entry.value %>" placeholder="Value"
               class="flex-1 border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        <button type="button" class="px-3 py-2 text-red-600 hover:bg-red-50 rounded remove-entry-btn">
          &times;
        </button>
      </div>
    <% }); %>
  <% } else { %>
    <div class="flex gap-2 mb-2 entry-row">
      <input type="text" name="keys" placeholder="Key"
             class="flex-1 border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
      <input type="text" name="values" placeholder="Value"
             class="flex-1 border border-gray-300 rounded px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
      <button type="button" class="px-3 py-2 text-red-600 hover:bg-red-50 rounded remove-entry-btn">
        &times;
      </button>
    </div>
  <% } %>
</div>
<button type="button" id="addEntryBtn" class="mt-2 px-4 py-2 text-sm text-blue-600 border border-blue-300 rounded hover:bg-blue-50">
  + Add Entry
</button>
