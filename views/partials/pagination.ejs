<% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
<nav class="flex justify-center mt-6">
  <ul class="flex items-center gap-1">
    <% if (page > 1) { %>
      <li>
        <a href="?page=<%= page - 1 %>" class="px-3 py-2 text-sm text-gray-600 bg-white border border-gray-300 rounded hover:bg-gray-50">&laquo; Prev</a>
      </li>
    <% } %>
    <% for (let i = 1; i <= totalPages; i++) { %>
      <li>
        <a href="?page=<%= i %>"
           class="px-3 py-2 text-sm border rounded <%= i === page ? 'bg-blue-600 text-white border-blue-600' : 'text-gray-600 bg-white border-gray-300 hover:bg-gray-50' %>">
          <%= i %>
        </a>
      </li>
    <% } %>
    <% if (page < totalPages) { %>
      <li>
        <a href="?page=<%= page + 1 %>" class="px-3 py-2 text-sm text-gray-600 bg-white border border-gray-300 rounded hover:bg-gray-50">Next &raquo;</a>
      </li>
    <% } %>
  </ul>
</nav>
<% } %>
