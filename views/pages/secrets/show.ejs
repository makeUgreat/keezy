<%- include('../../layouts/header') %>

<div class="mb-6">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold text-gray-900"><%= secret.name %></h1>
    <div class="flex gap-2">
      <a href="/secrets/<%= secret.name %>/edit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm">Edit</a>
      <button class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 text-sm delete-btn" data-name="<%= secret.name %>">Delete</button>
    </div>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 p-4 mb-4">
    <dl class="grid grid-cols-2 gap-4 text-sm">
      <div>
        <dt class="text-gray-500">Namespace</dt>
        <dd class="font-medium"><%= secret.namespace %></dd>
      </div>
      <div>
        <dt class="text-gray-500">Type</dt>
        <dd class="font-medium"><%= secret.type %></dd>
      </div>
      <div>
        <dt class="text-gray-500">Created</dt>
        <dd class="font-medium"><%= secret.creationTimestamp ? new Date(secret.creationTimestamp).toLocaleString() : '-' %></dd>
      </div>
      <div>
        <dt class="text-gray-500">Resource Version</dt>
        <dd class="font-medium"><%= secret.resourceVersion %></dd>
      </div>
    </dl>
  </div>

  <h2 class="text-lg font-semibold text-gray-900 mb-3">Data</h2>
  <% if (secret.data.length === 0) { %>
    <p class="text-gray-500">No data entries</p>
  <% } else { %>
    <div class="space-y-2">
      <% secret.data.forEach(function(entry) { %>
        <div class="bg-white rounded-lg border border-gray-200 p-4">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <span class="text-sm font-medium text-gray-700"><%= entry.key %></span>
              <div class="mt-1 flex items-center gap-2">
                <code class="secret-value text-sm bg-gray-100 px-2 py-1 rounded break-all" data-revealed="false">********</code>
                <span class="secret-plain hidden text-sm"><%= entry.value %></span>
              </div>
            </div>
            <div class="flex gap-2 ml-4">
              <button class="text-sm text-blue-600 hover:text-blue-800 reveal-btn">Show</button>
              <button class="text-sm text-gray-600 hover:text-gray-800 copy-btn" data-value="<%= entry.value %>">Copy</button>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

<a href="/secrets" class="text-sm text-gray-600 hover:text-blue-600">&larr; Back to list</a>

<%- include('../../layouts/footer') %>
