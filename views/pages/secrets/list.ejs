<%- include('../../layouts/header') %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Secrets</h1>
  <a href="/secrets/new" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-sm">
    + Create Secret
  </a>
</div>

<% if (secrets.length === 0) { %>
  <div class="text-center py-12 bg-white rounded-lg border border-gray-200">
    <p class="text-gray-500 mb-4">No secrets found in namespace "<%= currentNamespace %>"</p>
    <a href="/secrets/new" class="text-blue-600 hover:underline">Create your first secret</a>
  </div>
<% } else { %>
  <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-50 border-b border-gray-200">
        <tr>
          <th class="text-left px-4 py-3 text-sm font-medium text-gray-600">Name</th>
          <th class="text-left px-4 py-3 text-sm font-medium text-gray-600">Type</th>
          <th class="text-left px-4 py-3 text-sm font-medium text-gray-600">Data Keys</th>
          <th class="text-left px-4 py-3 text-sm font-medium text-gray-600">Created</th>
          <th class="text-right px-4 py-3 text-sm font-medium text-gray-600">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% secrets.forEach(function(secret) { %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-3">
              <a href="/secrets/<%= secret.name %>" class="text-blue-600 hover:underline font-medium"><%= secret.name %></a>
            </td>
            <td class="px-4 py-3 text-sm text-gray-600"><%= secret.type %></td>
            <td class="px-4 py-3 text-sm text-gray-600"><%= secret.dataCount %></td>
            <td class="px-4 py-3 text-sm text-gray-600">
              <%= secret.creationTimestamp ? new Date(secret.creationTimestamp).toLocaleString() : '-' %>
            </td>
            <td class="px-4 py-3 text-right">
              <a href="/secrets/<%= secret.name %>/edit" class="text-sm text-gray-600 hover:text-blue-600 mr-3">Edit</a>
              <button class="text-sm text-red-600 hover:text-red-800 delete-btn" data-name="<%= secret.name %>">Delete</button>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <%- include('../../partials/pagination') %>
<% } %>

<%- include('../../layouts/footer') %>
